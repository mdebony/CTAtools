#!/usr/bin/env python
"""Query required options and write to a config file"""
import sys
import logging
from Script.config import queryConfig

try:
    infile = sys.argv[1]
except:
    logging.error('Config file not found.')
    print('Usage: '+sys.argv[0]+' <output config file name>')
    sys.exit(1)

config = queryConfig()
config.filename = sys.argv[1]
config.write()
